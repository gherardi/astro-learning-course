---
import type { MarkdownLayoutProps } from 'astro';
import Main from './Main.astro';

type Props = MarkdownLayoutProps<{
	title: string;
	subtitle: string;
	poster: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title='Frau Katerina | Blog'>
	<figure class='figure'>
		<img src={poster} alt='' class='figure__image' />
		<figcaption class='figure__caption'>
			Poster Image for {title.toLowerCase()}
		</figcaption>
	</figure>

	<h1>{title}</h1>
	<h2>{subtitle}</h2>
	<slot />
</Main>

<style>
	h1 + h2 {
		margin-bottom: 3rem;
	}

	.figure {
		margin: 0;
	}

	.figure__image {
		width: 100%;
		border-radius: 10px;
		aspect-ratio: 1/1;
		object-fit: cover;
	}

	.figure__caption {
		font-size: 0.9rem;
	}
</style>
