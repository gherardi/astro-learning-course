---
const { title, to, gradientFrom, gradientTo } = Astro.props;

export type Props = {
	to: string;
	title: string;
	gradientFrom: string;
	gradientTo: string;
};
---

<a href={to} class='card'>
	<div class='card__inner'>
		<div class='card__title'>{title}</div>
		<!-- Render the arrow via HTML entity -->
		<div class='card__footer'>&rarr;</div>
	</div>
</a>

<style define:vars={{ gradientFrom, gradientTo }}>
	.card {
		--radius: 10px;
		padding: 4px;
		background-image: linear-gradient(to right, var(--gradientFrom), var(--gradientTo));
		border-radius: var(--radius);
		text-decoration: none;
		transition: all 0.2s ease-in-out;
	}

	.card:hover {
		transform: scale(0.95);
	}

	.card__inner {
		background: var(--background);
		padding: 1.5rem;
		border-radius: var(--radius);
		display: flex;
		flex-direction: column;
	}

	.card__footer {
		margin-top: auto 0 0 auto;
		padding-top: 2rem;
		font-size: 1.2rem;
		color: var(--gray-900);
	}

	.card__title {
		font-size: 1.2rem;
		color: var(--gray-900);
		font-weight: 500;
		line-height: 1.75rem;
	}
</style>

