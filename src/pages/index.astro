---
import Main from '../layouts/Main.astro';
import Cards from '../components/Cards.astro';

const profilePicture = 'https://i.imgur.com/JPGFE75.jpg';

const blogs = await Astro.glob<{
	title: string;
	poster: string;
	subtitle: string;
}>('./blogs/*.md');
---

<Main title='Frau Katerina'>
	<div class='profile flex items-start flex-wrap pt-4 pb-12'>
		<img
			src={profilePicture}
			class='profile__picture'
			alt="Frau katerina's website"
			width='100px'
			height='100px'
		/>

		<div class='profile__details'>
			<h1>Frau Katerina</h1>
			<h2>VP of engineering at Google</h2>
			<p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. In impedit sunt obcaecati fuga sapiente?</p>
		</div>
	</div>

	<Cards
		cards={[
			{
				title: 'Here are my guiding philosophies for life',
				gradientFrom: '#818cf8',
				gradientTo: '#d8b4fe',
				to: '/philosophies',
			},
			{
				title: 'A summary of my work history',
				gradientFrom: '#fde68a',
				gradientTo: '#fca5a5',
				to: '/work-summary',
			},
			{
				title: 'What I do beyond technology',
				gradientFrom: '#6ee7b7',
				gradientTo: '#9333ea',
				to: '/beyond-tech',
			},
		]}
	/>
	<div class='featured-blogs'>
		<h3 class='featured-blogs__title'>Featured Blogs</h3>
		<p class='featured-blogs__description'>
			Opinion pieces that will change everything you know about web development
		</p>
	</div>

	<ol class='blogs'>
		<!-- <li class='blog__list'>
			<a class='blog__link' href='blogs/typescript-is-the-new-javascript'
				>Typescript is the new Javascript</a
			>
		</li>
		<li class='blog__list'>
			<a class='blog__link' href='blogs/rust-javascript-tooling'
				>Why Rust is the future of javascript tooling</a
			>
		</li>
		<li class='blog__list'>
			<a class='blog__link' href='blogs/sleep-more'>Why you should sleep more</a>
		</li> -->

		{
			blogs.map((blog) => {
				return (
					<li class='blog__list'>
						<a class='blog__link' href={blog.url}>
							{blog.frontmatter.title}
						</a>
					</li>
				);
			})
		}
	</ol>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}
	.profile__details {
		flex: 1 0 300px;
	}
	.profile__details > h1 {
		margin-top: 0;
	}
	.profile__picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}
	.featured-blogs {
		margin: 0;
		padding: 3rem 0 0 0;
	}
	.featured-blogs__title {
		font-size: 2rem;
		color: var(--gray-900);
	}
	.featured-blogs__description {
		margin-top: -1.2rem;
	}
	.blogs {
		font-size: 1rem;
		font-weight: 500;
	}
	.blog__list {
		border-bottom: 1px solid;
		border-color: var(--gray-200);
	}
	.blog__link {
		opacity: 1;
		height: 100%;
		display: block;
		padding: 1rem 0;
		color: var(--gray-200);
		text-decoration: none;
		transition: opacity 0.2s ease;
	}
	.blog__link:hover {
		opacity: 0.7;
	}
</style>

